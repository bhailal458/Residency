<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sparken02.residency.MainActivity">

   <EditText
       android:id="@+id/edtprize"
       android:hint="Enter Prize"
       android:layout_width="183dp"
       android:layout_height="52dp"
       tools:layout_editor_absoluteY="-1dp"
       tools:layout_editor_absoluteX="4dp"
       android:layout_alignParentTop="true"
       android:inputType="number"
       />


    <EditText
        android:id="@+id/edtmantenence"
        android:hint="Enter mantenence"
        android:layout_width="187dp"
        android:layout_height="62dp"
        tools:layout_editor_absoluteY="-11dp"
        tools:layout_editor_absoluteX="197dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/edtprize"
        android:inputType="number"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="233dp"
        android:layout_height="47dp"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="71dp"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/edtprize"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="65dp"
        android:layout_marginEnd="65dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignStart="@+id/spinner"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:text="OK"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="203dp" />


    <TextView
        android:id="@+id/textview"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="47dp" />


</RelativeLayout>
